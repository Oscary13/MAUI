<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.FlyoutPageDemo"
             Title="FlyoutPageDemo"
            FlyoutLayoutBehavior="Popover">
    <FlyoutPage.Flyout>
        <ContentPage Title="MI APLICACION" BackgroundColor="Aqua">
            <Label 
                Text="Hola De flyout"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                />
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <ContentPage Title="DETALLES" BackgroundColor="Chocolate">
            <Label 
                Text="Hola De Detalles"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                />
        </ContentPage>
    </FlyoutPage.Detail>
</FlyoutPage>